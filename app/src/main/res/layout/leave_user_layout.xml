<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474A4C"
    tools:context=".Leave_user">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/backuser_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#1D6320"
                android:text="Back"
                android:textColor="@color/white"
                app:backgroundTint="#1D6320"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_leave2"
            android:layout_below="@+id/backuser_leave"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="REQUEST FOR LEAVE"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/faculty_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_leave2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="Enter your Name"
                android:padding="10dp" />

            <Button
                android:id="@+id/date_picker_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/faculty_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#1D6320"
                android:text="Pick Date"
                android:textColor="@color/white"
                app:backgroundTint="#1D6320"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_leave2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_picker_btn"
            android:id="@+id/SelectedDate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />

            <EditText
                android:id="@+id/reason_text"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_below="@+id/SelectedDate"
                android:layout_marginTop="2dp"
                android:background="@drawable/edit_text"
                android:hint="Type your request here..."
                android:inputType="text|textMultiLine"
                android:padding="10dp" />

            <Button
                android:id="@+id/submitrequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reason_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#1D6320"
                android:text="Submit"
                android:textColor="@color/white"
                app:backgroundTint="#1D6320" />

            <EditText
                android:id="@+id/faculty_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="Enter your Email Address"
                android:inputType="textEmailAddress"
                android:layout_below="@id/faculty_name"
                android:layout_marginTop="16dp"
                android:padding="10dp" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
